<div class="container" style="min-width: 100%; height: 80vh; background-color: #000000; color: #D7D7D7;">
  <div class="row justify-content-center">
    <div class="col-6 my-5 py-4">

        <h1 class="mb-5 mt-2" style="color: #D7D7D7;">Add a movie to <%= @list.name %> list</h1>

        <%= simple_form_for [@list, @bookmark] do |f| %>
          <%= f.association :movie, prompt: "Choose a movie", input_html: {data: {controller: "tom-select"}} %>
          <%= f.input :comment, placeholder: "Enter a comment about the movie" %>
          <%= f.button :submit, "Add movie", class:"btn btn-danger" %>
        <% end %>

    </div>
  </div>
</div>
