<div class="container" style="min-width: 100%; height: 80vh; background-color: #000000; color: #D7D7D7;">
  <div class="row justify-content-center">
    <div class="col-6 my-5 py-4">

      <h1 class="mb-5 mt-2" style="color: #D7D7D7;">How would you like to name your list?</h1>
      <%= simple_form_for(@list) do |f| %>
        <%= f.input :name %>
        <%= f.input :photo, as: :file %>
        <%= f.button :submit, "Create list", class:"btn btn-danger" %>
      <% end %>

    </div>
  </div>
</div>
