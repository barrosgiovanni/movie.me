<div class="container my-5 pt-5">

  <div class="row justify-content-between">
    <div class="col-2">
      <h1 class="text-start" style="color: #D7D7D7;">My lists</h1>
    </div>
    <div class="col-2">
      <%= link_to "Create new list", lists_new_path, class: "btn btn-primary ms-5 mt-2" %>
    </div>
  </div>

</div>

  <div class="container mb-5 pt-3">
    <div class="cards">

      <% @lists.each do |list|%>

        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, crop: :fill %>')">
          <p><%= list.name %></p>
        </div>

      <% end %>

    </div>

  </div>
