<div class="container my-5 pt-5">
  <div class="row justify-content-between">
    <div class="col-2">
      <h1 class="text-start" style="color: #D7D7D7;">My lists</h1>
    </div>
    <div class="col-2">
      <%= link_to "Create new list", new_list_path, class: "btn btn-danger ms-5 mt-2" %>
    </div>
  </div>
</div>

<div class="container mb-5 pt-3">
  <div class="cards">
    <% @lists.each do |list|%>
      <%= link_to list_path(list), class: "card-link" do %>
        <div class="card-category" style="background-image: url('<%= cl_image_path list.photo.key, crop: :fill %>')">
            <p><%= list.name %></p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
