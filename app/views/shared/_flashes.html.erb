<% if notice %>
  <div class="flash flash-success fade show" role="flash">
    <span>Successfully signed in!</span>
  </div>
<% end %>
<% if alert %>
  <div class="flash flash-warning fade show" role="flash">
    <%= alert %>
    <span>It seems you don't have profile picture yet.</span>
  </div>
<% end %>
<% if alert %>
  <div class="flash flash-danger fade show" role="flash">
    <%= alert %>
    <span>A problem has occurred while processing your demand.</span>
  </div>
<% end %>
