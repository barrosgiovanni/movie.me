<div class="container mt-4 py-3">
  <div class="row justify-content-center">
    <div class="col-6">
      <%= form_with url: movies_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control me-1",
          placeholder: "Search through all movies..."
        %>
        <%= submit_tag "Search", class: "btn btn-search btn-danger" %>
      <% end %>
    </div>
  </div>
</div>

<div class="container mb-5 pt-3">
  <div class="cards mt-5">
    <% @movies.each do |movie|%>
      <div class="card-movie">
        <%= link_to movies_path, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove this movie from the list?" }, class: "add-icon" do %>
          <i class="fa-solid fa-circle-plus"></i>
        <% end %>
        <%= image_tag movie.poster_url %>
        <div class="card-movie-infos">
          <div class="mt-3 mx-3">
            <h2 class="card-movie-title mb-2"><%= movie.title %></h2>
            <p class="js-excerpt excerpt-hidden"><%= movie.overview %></p>
          </div>
          <a role="button" href="#" class="js-show-more show-more-btn mx-3 mt-1">Show more</a>
          <div class="d-flex justify-content-end mt-3 mb-3 mx-3">
            <i class="fa-solid fa-star" style="color: #FDDA0D;"></i>
            <h2 class="card-movie-rating ms-2"><%= movie.rating %></h2>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="container mt-5">
  <div class="row justify-content-center mt-5">
    <div class="col-3 mt-5 justify-content-center">
      <%== pagy_bootstrap_nav(@pagy).html_safe %>
    </div>
  </div>
</div>
