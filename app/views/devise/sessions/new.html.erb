<div class="container" style="min-width: 100%; height: 80vh; background-color: #000000; color: #D7D7D7;">
  <div class="row justify-content-center">
    <div class="col-5 my-5 py-4">
      <h1 class="mb-5 mt-2" style="color: #D7D7D7;">Log in</h1>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Log in", class:"btn btn-primary my-2" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
